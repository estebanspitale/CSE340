<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (!loggedin) { %>
  <!-- Mostrar solo si NO está logueado -->
  <a title="Click to log in" href="/account/login">My Account</a>
<% } else { %>
  <!-- Mostrar solo si ESTÁ logueado -->
  <% if (accountData && accountData.account_firstname) { %>
    <a title="Go to account management" href="/account/">Welcome <%= accountData.account_firstname %></a>
  <% } %>
  <a title="Click to log out" href="/account/logout">Logout</a>
<% } %>
  </div>
</header>