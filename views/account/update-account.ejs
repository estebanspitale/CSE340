<section class="account-update-container">
  <h1><%= title %></h1>

  <% if (messages.notice) { %>
    <div class="notice" role="alert"><%= messages.notice %></div>
  <% } %>

  <% if (messages.error) { %>
    <div class="error" role="alert"><%= messages.error %></div>
  <% } %>

  <!-- Account Info Update Form -->
  <section class="account-update-info">
    <h2>Update Account Information</h2>
    <form action="/account/update" method="post">
      <fieldset>
        <legend class="sr-only">Update Account Info</legend>

        <label for="account_firstname">First Name</label>
        <input type="text" id="account_firstname" name="account_firstname" required
          value="<%= typeof account_firstname != 'undefined' ? account_firstname : accountData.account_firstname %>">

        <label for="account_lastname">Last Name</label>
        <input type="text" id="account_lastname" name="account_lastname" required
          value="<%= typeof account_lastname != 'undefined' ? account_lastname : accountData.account_lastname %>">

        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" required
          value="<%= typeof account_email != 'undefined' ? account_email : accountData.account_email %>">

        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        <button type="submit">
          <span class="sr-only">Submit updated account info</span>
          Update Account
        </button>
      </fieldset>
    </form>
  </section>

  <!-- Password Change Form -->
  <section class="account-password-change">
    <h2>Change Password</h2>
    <p id="passwordRequirements">
      Enter a new password to change your current one. Passwords must be at least 12 characters and include an uppercase letter, lowercase letter, number, and symbol.
    </p>

    <form action="/account/update-password" method="post">
      <fieldset>
        <legend class="sr-only">Change Password</legend>

        <label for="account_password">New Password</label>
        <input type="password" id="account_password" name="account_password" minlength="12" required aria-describedby="passwordRequirements">

        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        <button type="submit" disabled id="changePasswordBtn">
          <span class="sr-only">Submit new password</span>
          Change Password
        </button>
      </fieldset>
    </form>
  </section>

  <script>
    const pwdInput = document.getElementById('account_password');
    const btn = document.getElementById('changePasswordBtn');

    btn.disabled = pwdInput.value.length < 12;

    pwdInput.addEventListener('input', () => {
      btn.disabled = pwdInput.value.length < 12;
    });
  </script>
</section>