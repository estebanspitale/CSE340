<%- include("../partials/head") %>

<div class="edit-inventory-page">
  <main>
    <h1>Edit Inventory Item</h1>

    <% if (errors && errors.length > 0) { %>
      <div class="form-errors">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (message) { %>
      <p class="notice"><%= message %></p>
    <% } %>

    <form id="updateForm" action="/inv/update" method="post">
      <label for="classificationList">Classification</label>
      <%- classificationList %>

      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make ? inv_make : '' %>">

      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model ? inv_model : '' %>">

      <label for="inv_year">Year</label>
      <input type="number" id="inv_year" name="inv_year" min="1900" max="2100" required value="<%= inv_year ? inv_year : '' %>">

      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" required><%= inv_description ? inv_description : '' %></textarea>

      <label for="inv_image">Image Path</label>
      <input type="text" id="inv_image" name="inv_image" required value="<%= inv_image ? inv_image : '/images/vehicles/no-image.png' %>">

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inv_thumbnail ? inv_thumbnail : '/images/vehicles/no-image.png' %>">

      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required value="<%= inv_price ? inv_price : '' %>">

      <label for="inv_miles">Miles</label>
      <input type="number" id="inv_miles" name="inv_miles" min="0" required value="<%= inv_miles ? inv_miles : '' %>">

      <label for="inv_color">Color</label>
      <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color ? inv_color : '' %>">

      <button type="submit" disabled>Update Vehicle</button>

      <!-- Campo oculto con el ID del vehÃ­culo -->
      <input type="hidden" name="inv_id"
        <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    </form>

    <script src="/js/inv-update.js"></script>
  </main>
</div>
