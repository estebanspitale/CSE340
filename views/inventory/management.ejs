<main class="inventory-management">
  <h1>Inventory Management</h1>

  <!-- Flash Messages -->
  <% if (messages.notice) { %>
    <ul class="flash-messages">
      <% messages.notice.forEach(function(msg){ %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <ul>
    <li><a href="/inv/classification/add">Add New Classification</a></li>
    <li><a href="/inv/inventory/add">Add New Inventory Item</a></li>
  </ul>

  <!-- Heading -->
  <h2>Manage Inventory</h2>

  <!-- Párrafo explicativo -->
  <p>Select a classification from the list to see the items belonging to the classification.</p>

  <!-- Muestra el select de clasificación -->
  <%- classificationList %>

  <!-- Tabla vacía donde se inyectará el inventario -->
  <table id="inventoryDisplay"></table>

  <!-- Mensaje si JS está deshabilitado -->
  <noscript>JavaScript must be enabled to use this page.</noscript>

</main>

<script src="../../js/inventory.js"></script>